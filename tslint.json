{
    "extends": ["tslint:latest", "tslint-config-prettier", "tslint-consistent-codestyle"],
    "rules": {
        "new-parens": true,
        "no-any": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": true,
        "no-implicit-dependencies": [true, "dev"],
        "no-unused": true,
        "no-unused-expression": true,
        "no-console": {
            "severity": "error",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "no-inferrable-types": true,
        "variable-name": [true, "ban-keywords", "allow-leading-underscore", "check-format"]
    },
    "rulesDirectory": [
      "node_modules/tslint-eslint-rules/dist/rules"
    ]
}
